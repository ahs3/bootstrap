
#requires zlib
#requires tcp_wrappers
#requires fipscheck
#requires openssl
#requires openldap
#requires tcp_wrappers

export RPMBUILD_EXTRA_ARGS="--with bootstrap"

rpmi openssh

( echo "%global skip_gnome_askpass 1" ; cat $HOME/rpmbuild/SPECS/openssh.spec ) > $HOME/rpmbuild/SPECS/openssh.spec2
mv $HOME/rpmbuild/SPECS/openssh.spec2 $HOME/rpmbuild/SPECS/openssh.spec

sed -i -e "s|%{_unitdir}|/usr/lib/systemd/system|g" $HOME/rpmbuild/SPECS/openssh.spec

rpmb -bb openssh

rpminst openssh openssh-clients openssh-server openssh-server-sysvinit openssh-keycat pam_ssh_agent_auth
