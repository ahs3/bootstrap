#requires flex
#requires bison
#requires libtool
#requires db4
#requires perl
#requires gettext
#requires pkgconfig
#requires cracklib

mcd $BUILDDIR/pam
rsync -av $SRC/Linux-PAM-*/ ./
	
./configure \
	--libdir=/lib${SUFFIX} \
	--includedir=/usr/include/security \
	--disable-prelude \
	--disable-selinux \
	--disable-audit \
	--disable-nis
make Makefile

# Why is PWHISTORY_HELPER not being set in Makefile.in and passed down?
sed -i 's,PWHISTORY_HELPER,"/usr/sbin/pwhistory_helper",' modules/pam_pwhistory/pam_pwhistory.c

make $J
make $J install
