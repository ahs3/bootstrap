#requires perl

        case $TARGET in
            ppc64le*) sslarch="linux-ppc64le" ;;
    	    *) sslarch="linux-generic32" ;;
	esac

        mcd $BUILDDIR/openssl
        cd $SRC/openssl-*

./Configure \
	--prefix=/usr --libdir=lib${SUFFIX} --openssldir=/etc/pki/tls \
	zlib enable-camellia enable-seed enable-tlsext enable-rfc3779 \
	enable-cms enable-md2 no-idea no-mdc2 no-rc5 no-ec2m no-srp \
	--enginesdir=/usr/lib${SUFFIX}/openssl/engines \
	shared $sslarch fips

        make depend
        make all
        make rehash
        make install

