	# FIXME: this possibly has a problem with pam_faillock.8
	# not sure if configure would re-generate that warning at this point
	mcd $BUILDDIR/pam
	rsync -av $SRC/Linux-PAM-*/ ./
	./configure \
		--libdir=/lib \
		--includedir=/usr/include/security \
		--disable-prelude \
		--disable-selinux \
		--disable-audit
	make $J
	make $J install
